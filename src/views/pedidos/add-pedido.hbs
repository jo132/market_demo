<div class="col-md-4 mx-auto">
     <div class="card">
          <div class="card-header">
               <h3>Nuevo Pedido</h3>
          </div>
          <div class="card-body">
               <form action="/pedido/new/{{note.id}}" method="POST">
                    <div class="form-group">
                         <input type="number" name="cantidad" value="{{cantidad}}" class="form-control" placeholder="Cantidad">
                    </div>
                    <div class="form-group">
                         <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                    </div>
               </form>
          </div>
     </div>
</div>