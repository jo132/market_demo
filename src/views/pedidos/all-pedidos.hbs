<div class="row">
     {{#each pedido}}
          <div class="col-md-4">
               <div class="card m-1">
                    <div class="card-body">
                         <h4 class="card-title d-flex justify-content-between align-items-center">
                              Nompre del producto: {{title}}
                         </h4>
                         <p>Cantidad de pares: {{cantidad}}</p>
                         <p class="lead" style="text-align: center">Total: ${{total}}</p>
                         <p>Fecha del pedido: {{date}}</p>
                    </div>
               </div>
          </div>
     {{else}}
          <div class="card mx-auto">
               <div class="card-body">
                    <h1>Hola {{user.name}}!!</h1>
                    <p class="lead">Aun no hay pedidos!</p>
                    <a href="/notes" class="btn btn-success btn-block">Crea un pedido!</a>
               </div>
          </div>
     {{/each}}
</div>